/* components/request_add/request_add.wxss */

.add-form {
    /* height: 300rpx; */
    width: 90%;
    /* border: 1px solid black; */
    margin: auto;
    color: #5e5e5e;
    background-color: #fff;
    padding: 30rpx 20rpx;
    padding-bottom: 100rpx;
    border-radius: 10rpx;
}

.add-form-item {
    height: 100rpx;
    width: 100%;
    font-size: 35rpx;
    font-weight: 600;
    border-bottom: 1px solid #b1b1b1;
    display: flex;
    align-items: center;
    letter-spacing: 3rpx;
}

.add-form-picker {
    height: 80rpx;
    width: 100%;
    display: flex;
    align-items: center;
    letter-spacing: 3rpx;
}

.add-form-picker view {
    display: inline-block;
    width: 560rpx;
    font-size: 30rpx;
    text-align: right;
}

.add-form-input {
    height: 100%;
    width: 520rpx;
    font-weight: normal;
    font-size: 30rpx;
    /* border: 1px solid black; */
    text-align: right;
}

.add-form-btn {
    margin: auto;
    margin-top: 50rpx;
    background-color: #FFA500;
    width: 200rpx;
    height: 80rpx;
    font-size: 30rpx;
    color: white;
}

.button-hover {
    box-shadow: inset 0 0 15rpx 0 rgba(0, 0, 0, 0.3);
}