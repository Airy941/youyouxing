/* pages/user/user.wxss */

.head {
  background-color: #EE7600;
  border-bottom: 1px solid #fff;
  /* box-shadow: inset 0 -10rpx 10rpx #fff; */
}
.head .head_img{
  border-radius: 50%;
  border: 1px solid #ccc;
  box-shadow: 0 0 10rpx 3rpx #fff;
}
.btn-icon {
  width: 45rpx;
  height: 45rpx;
  margin-left: 270rpx;
}
.more-btn {
  align-items: center;
  font-size: 13pt;
  padding: 0 30rpx;
}
.btn-icon-two {
  width: 45rpx;
  height: 45rpx;
  margin-left: 257rpx;
}
.more-list {
  padding-top: 30rpx;
}
.job_done{
	align-content: center;
	margin: 35rpx;
	width: 25%;
  font-size: 25rpx;
}
.total_done{
	width: 85%;
  font-size: 25rpx;
}
.done{
	display: flex;
	flex-direction: row;
	/* border-right: solid 1px #ffffff; */
	
}
.total_undo{
	width: 85%;
  font-size: 25rpx;
}
.undo{
	display: flex;
	flex-direction: row;
	width: 100%;
}
.job_undo{
	display: flex;
	flex-direction: row;
	border-left: 20 rpx;
	border-right: 20 rpx;
	width: 100%;
  font-size: 25rpx;
}
.job_undo_classify{
	align-content: space-between;
	margin: 37rpx;
	width: 100%;
}
.job_undo_classify image{
	height: 40rpx;
	width: 40rpx;
	border-radius: 25%;
	padding: 0;
}