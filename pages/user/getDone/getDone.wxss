/* components/main_list/main_list.wxss */

.list-bar {
    padding-top: 30rpx;
    width: 100%;
    margin-left: 2%;
    /* border: 1px solid black; */
    /* display: flex;
    justify-content: start; */
}

.list-bar-item {
    height: 170rpx;
    width: 92%;
    background-color: #fff;
    border-radius: 20rpx;
    border: 1px solid #fff;
    box-shadow: 0 0 10rpx 2rpx #CFCFCF;
    padding: 0 12rpx;
    min-width: 92%;
    max-width: 92%;
    display: flex;
    align-items: center;
}


.list-item-left {
  padding-top: 70rpx;
  padding-left: 35rpx;
  font-size: 36rpx;
    height: 100rpx;
    width: 250rpx;
}

.list-item-middle {
    width: 76%;
    height: 140rpx;
    /* border: 1px solid black; */
    padding-left: 20rpx;
}

.item-middle-top {
    height: 75%;
    width: 100%;
    /* border: 1px solid red; */
}

.middle-top-items {
    font-size: 20rpx;
    width: 50%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    /* color: #EE7600; */
    font-weight: 500;
    display: inline-block;
    letter-spacing: 2rpx;
}

.middle-top-items text {
    font-size: 24rpx;
    font-weight: lighter;
    color: #000;
    letter-spacing: 2rpx;
}

.item-middle-foot {
    width: 100%;
    height: 25%;
    /* border: 1px solid red; */
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 20rpx;
    letter-spacing: 2rpx;
}

.item-middle-foot text {
    font-size: 24rpx;
    font-weight: lighter;
    color: #696969;
    letter-spacing: 2rpx;
}

.list-item-right{
  padding-top: 75rpx;
  padding-right: 0rpx;
  font-size: 36rpx;
    height: 100rpx;
    width: 2rpx;
}